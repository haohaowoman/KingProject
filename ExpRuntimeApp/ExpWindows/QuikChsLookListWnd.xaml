<metro:MetroWindow x:Class="ExpRuntimeApp.ExpWindows.QuikChsLookListWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpRuntimeApp.ExpWindows"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        DataContext="{StaticResource ExpViewModule}" 
        Title="通道数据列表" Height="800" Width="320" Topmost="True" Icon="/ExpRuntimeApp;component/Images/CheckRight.ico" ShowMaxRestoreButton="False" EnableDWMDropShadow="True" IsMaxRestoreButtonEnabled="False" SaveWindowPosition="True">
    <Grid>
        <DataGrid Margin="3" AutoGenerateColumns="False" ItemsSource="{Binding Path=HasSensorChannels}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="通道名" Width="80" Binding="{Binding Path=Label}"/>
                <DataGridTextColumn Header="数据" Width="60" Binding="{Binding Path=MeasureValue,StringFormat={}{0:F1}}"/>
                <DataGridTextColumn Header="单位" Width="60" Binding="{Binding Path=Unit}"/>
                <DataGridTextColumn Header="摘要" MinWidth="100" Binding="{Binding Path=Summary}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</metro:MetroWindow>
