<metro:MetroWindow x:Class="ExpRuntimeApp.ExpWindows.AnalogyValuesWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpRuntimeApp.ExpWindows"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource ExpViewModule}"
        Title="数采通道电流值" Height="800" Width="300">
    <Grid>
        <DataGrid x:Name="ValueGrid" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="通道号" Binding="{Binding Path=Prompt,Mode=OneWay}"></DataGridTextColumn>
                <DataGridTextColumn Header="电流值（ma）" Binding="{Binding Path=AnalogyValue, Mode=OneWay,StringFormat={}{0:F3}}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</metro:MetroWindow>
