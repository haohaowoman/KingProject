<UserControl x:Class="ExpRuntimeApp.UserControls.EOVCtrlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpRuntimeApp.UserControls"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" BorderThickness="2"
             >
    <UserControl.BorderBrush>
        <SolidColorBrush Color="#FF7F72AC" Opacity="0.8"/>
    </UserControl.BorderBrush>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:EOVCtrlControl}, Path=EOV.Channel.Label}" Grid.RowSpan="3"></TextBlock>
        
    </Grid>
</UserControl>
