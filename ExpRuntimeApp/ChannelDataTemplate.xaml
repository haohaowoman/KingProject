                            <GradientStop Color="#FF6B6BCF" Offset="0.574"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>

                <vfgauge:Gauge Grid.Row="1" Grid.Column="0"
                               Margin="3" MinWidth="150" 
                               MinHeight="200" Type="Linear" 
                               AnimationEnabled="False"
                               HorizontalAlignment="Center" Background="#FF5198EE" BorderBrush="#FF26C6EA" FrameBackground="#FFDE8989">
                    <vfgauge:Gauge.OuterBorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF8B8ED4" Offset="0"/>
                            <GradientStop Color="#FF4B64D4" Offset="1"/>
                        </LinearGradientBrush>
                    </vfgauge:Gauge.OuterBorderBrush>
                    <vfgauge:Gauge.OuterBackground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF55A6C5" Offset="0.005"/>
                            <GradientStop Color="#FF3E6BA0" Offset="1"/>
                        </LinearGradientBrush>
                    </vfgauge:Gauge.OuterBackground>
                    <vfgauge:Gauge.LinearScales>
                        <!--<vfgauge:CircularScale 
                                Minimum="{Binding Path=ExpPoint.Range.Low}" 
                                Maximum="{Binding Path=ExpPoint.Range.Height}"
                                />-->
                        <vfgauge:LinearScale 
                                Minimum="0" 
                                Maximum="100" BorderThickness="1" Padding="3,0"
                                />
                    </vfgauge:Gauge.LinearScales>
                    <vfgauge:Gauge.Indicators>
                        <vfgauge:BarIndicator                            
                                Value="{Binding Path=Value}"
                                ValueFormatString="F2"
                                Focusable="False"
                                LabelEnabled="True"
                                LabelStyle="Outside"
                                LabelFontSize="18" Placement="Center" BorderBrush="#FFF30606"
                                    >
                            <vfgauge:BarIndicator.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#E287356D" Offset="0.05"/>
                                    <GradientStop Color="#FFE23048" Offset="1"/>
                                </LinearGradientBrush>
                            </vfgauge:BarIndicator.Background>

                        </vfgauge:BarIndicator>

                    </vfgauge:Gauge.Indicators>
                </vfgauge:Gauge>

                <Border Grid.Row="2" Style="{StaticResource VGroupBorderStyle}" HorizontalAlignment="Center">
                    <TextBlock FontSize="18" FontStyle="Oblique" FontWeight="Bold">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F2} {1}">
                                <Binding Path="Value"/>
                                <Binding Path="Unit"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>