<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExpRuntimeApp"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:module="clr-namespace:ExpRuntimeApp.Modules"
                    xmlns:vfgauge="clr-namespace:Visifire.Gauges;assembly=WPFVisifire.Gauges">

    <Style TargetType="{x:Type vfgauge:Gauge}">
        <Style.Setters>
            <Setter Property="AnimationEnabled" Value="False"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="VGroupBorderStyle" TargetType="{x:Type Border}">
        <Style.Setters>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="BorderBrush" Value="DarkGoldenrod"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5"/>
        </Style.Setters>
    </Style>

    <Thickness x:Key="TextBlockMargin">3,1</Thickness>

    <DataTemplate x:Key="MeasureDataTemplate" DataType="{x:Type module:MdChannel}">
        <GroupBox Header="{Binding Path=Label}" Margin="5,10">
            <Border Style="{StaticResource VGroupBorderStyle}" HorizontalAlignment="Left">
                <Grid Margin="1" HorizontalAlignment="Left" Background="White">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <UniformGrid Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="摘要：" Margin="{StaticResource TextBlockMargin}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Summary}"  Margin="{StaticResource TextBlockMargin}" HorizontalAlignment="Left" FontStyle="Italic"></TextBlock>

                        <TextBlock Text="范围：" Margin="{StaticResource TextBlockMargin}"/>
                        <TextBlock Margin="{StaticResource TextBlockMargin}" HorizontalAlignment="Left">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} ~ {1}">
                                    <Binding Path="Range.Low"></Binding>
                                    <Binding Path="Range.Height"></Binding>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </UniformGrid>

                    <!--#endregion-->

                    <!--#region 显示测量部分-->
                    <GroupBox Grid.Row="1" Grid.Column="0" Header="采集值" Margin="1">
                        <vfgauge:Gauge Margin="3" DockPanel.Dock="Top" MinWidth="200" MinHeight="200" Type="Circular"
                            Background="#FF3E3A44"
                            BorderBrush="#FFAC4848" 
                            Foreground="#FFC9BFBF" 
                            OuterBackground="#FF4B236C" 
                            OuterBorderBrush="#FF2821A6">
                            <vfgauge:Gauge.CircularScales>
                                <!--<vfgauge:CircularScale 
                                Minimum="{Binding Path=Channel.Range.Low}" 
                                Maximum="{Binding Path=Channel.Range.Height}"
                                >
                                
                            </vfgauge:CircularScale>-->
                                <vfgauge:CircularScale Minimum="0" Maximum="100"/>
                            </vfgauge:Gauge.CircularScales>
                            <vfgauge:Gauge.Indicators>
                                <vfgauge:NeedleIndicator 
                                Value="{Binding Path=Value}" 
                                ValueFormatString="F2"
                                Focusable="False"
                                LabelEnabled="True"
                                LabelStyle="Outside"
                                LabelFontSize="18"
                                CapWidth="0.4"
                                >
                                    <vfgauge:NeedleIndicator.CapBackground>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <LinearGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleY="-0.95" ScaleX="1.05"/>
                                                    <SkewTransform AngleY="0" AngleX="0" CenterY="0.5" CenterX="0.5"/>
                                                    <RotateTransform CenterY="0.5" CenterX="0.5" Angle="10"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </LinearGradientBrush.RelativeTransform>
                                            <GradientStop Color="#FFC2D0F3"/>
                                            <GradientStop Color="#FF8E9299" Offset="0.536"/>
                                            <GradientStop Color="#FF5F437C" Offset="0.933"/>
                                        </LinearGradientBrush>
                                    </vfgauge:NeedleIndicator.CapBackground>
                                </vfgauge:NeedleIndicator>
                            </vfgauge:Gauge.Indicators>
                        </vfgauge:Gauge>
                    </GroupBox>
                    <!--#endregion-->

                </Grid>
            </Border>
        </GroupBox>
    </DataTemplate>

