    <DataTemplate x:Key="StatusOutputDataTemplate" DataType="{x:Type module:MdChannel}">
        <GroupBox Header="{Binding Path=Label}" Margin="5,10">
            <Border Style="{StaticResource VGroupBorderStyle}" HorizontalAlignment="Left">
                <Grid Margin="1" HorizontalAlignment="Left" Background="White">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <UniformGrid Grid.Row="0" Grid.Column="0" Columns="2" HorizontalAlignment="Left">

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="摘要：" Margin="{StaticResource TextBlockMargin}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Summary}"  Margin="{StaticResource TextBlockMargin}" HorizontalAlignment="Left" FontStyle="Italic"></TextBlock>

                    </UniformGrid>
                    <GroupBox Grid.Row="1" Grid.Column="0" Header="状态" Margin="1">
                        <Ellipse x:Name="StatusLight" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="3" Stroke="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}, Path=Background}">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FF8AAC61" Offset="1"/>
                                    <GradientStop Color="#FFA6F04E" Offset="0"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Grid.Column="1" Header="控制" Margin="1">
                        <DockPanel Margin="3" Cursor="Hand">
                            <metro:ToggleSwitch DockPanel.Dock="Top" 
                                                OffLabel="关" OnLabel="开" 
                                                Margin="3" Padding="10" 
                                                Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" 
                                                IsChecked="{Binding Path=NextStatus,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></metro:ToggleSwitch>
                            <Button DockPanel.Dock="Bottom" Margin="3" Padding="10,5" Content="OUT" Tag="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext}" HorizontalAlignment="Right" Cursor="Hand" ></Button>
                        </DockPanel>
                    </GroupBox>
                </Grid>
            </Border>
        </GroupBox>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=Value}" Value="false">
                <DataTrigger.Setters>
                    <Setter TargetName="StatusLight" Property="Fill">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFEE3B5C" Offset="1"/>
                                <GradientStop Color="#FFA84E63" Offset="0"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger.Setters>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

