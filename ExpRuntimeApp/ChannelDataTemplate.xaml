                                Minimum="{Binding Path=Channel.Range.Low}" 
                                Maximum="{Binding Path=Channel.Range.Height}"
                                />-->
                                <vfgauge:LinearScale 
                                Minimum="0" 
                                Maximum="100" BorderThickness="1" Padding="3,0"
                                />
                            </vfgauge:Gauge.LinearScales>
                            <vfgauge:Gauge.Indicators>
                                <vfgauge:BarIndicator                            
                                Value="{Binding Path=Value}"
